<%= render :partial => "quality/header" %>

<div class="container">
  <% if !flash[:alert].nil? %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
  <% end %>

   <div class="form-group">
     <label class="control-label col-sm-1"></label>
     <div class="well well-sm text-center">
     <h3>QP Measure Tool All Category</h3>
     <h3><p><small>코드 품질측정 툴 전체보기</small></p></h3>
     </div>
     </div>

     <div class="col-sm-6 text-right">
     <p><a href="http://devcafe.nhncorp.com/QPTalk/wiki_1" class="btn btn-default btn-sm" role="button">
     <strong>QP Manual</strong></a></p>
     </div>
 

    <table class="table table-bordered">
    <thead>
      <tr class="background-top">
        <th>Quality Practice명</th>
        <th>도구명</th>
        <th>용도</th>
        <th>지원언어</th>
        <th>지원OS</th>
        <th>구매필요여부</th>
        <th>Java8지원버전</th>
        <th>URL</th>
      </tr>
    </thead>
    <tbody class="background-line">
      <tr>
        <% @posts.each do |tool| %>
        <td>
        <strong><%= tool.quality_practice %></strong>
        </td>
        <td class="background-row">
        <strong><%= tool.toolname %></strong>
        </td>
        <td>
        <strong><%= tool.title %></strong>
        </td>
        <td class="background-row">
        <strong><%= tool.support_language.delete('[],"') %></strong>
        </td>
        <td>
        <strong><%= tool.support_os.delete('[],"') %></strong>
        </td>
        <td class="background-row">
        <strong><%= tool.buy_need %></strong>
        </td>
        <td>
        <strong><%= tool.support_javaversion %></strong>
        </td>
        <td class="background-row">
        <strong><%= tool.urlname %></strong>
        </td>
      </tr>
      <% end %>

    </tbody>
  </table>
</div>
<div class="container">
  <ul class="pager">
    <li class="previous"><a href="/">Previous</a></li>
    <li class="next"><a href="/">Next</a></li>
  </ul>
</div>

