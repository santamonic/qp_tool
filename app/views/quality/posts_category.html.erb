<div class="container"> 
   <% if !flash[:alert].nil? %> 
   <div class="alert alert-danger"> 
      <%= flash[:alert] %> 
   </div> 
   <% end %> 

  <div class="well well-sm text-center">
    <h3>QP Measure TOOL Category 분류</h3>
    <h2><p><small><%= @quality_practice %></small></p></h2>
  </div>

  <div class="row text-center">
  <% @posts.reverse.each do |post| %>
   <div class="col-sm-6" >
    <div class="thumbnail">
      <h3><p><%= post.toolname %></p></h3>
     <a href="/quality/show/<%= post.id %>">
      
      <p><img src="<%= post.image_url(:thumb) %>" class="img-rounded" width="100" height="100"></p></a>

      <p><div  style="border: 1px solid; background-color:#00001a; height:180px"></p>
      <p><h6><font color="white">지원언어</h5></font></h6>
      <span class="badge"><%= post.support_language.delete('[],"') %></span>
      <p><h6><font color="white">라이선스</h6></p>
      <span class="badge"><%= post.buy_need %></span>
      <p><h6><font color="white">Java8지원버전</h6></p>
      <span class="badge"><%= post.support_javaversion %>
      </div>
    </div>
  </div>
  <% end %>
</div>
