<div class="container">
  <% if !flash[:alert].nil? %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
  <% end %>

  <h2 class="text-center">Qquality Measure Tool 정보보기</h2>
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-5 text-right">
    <p><img src="<%= @post.image_url(:medium) %>" class="img-rounded"></p>
    </div>
    <div class="col-md-5">
    <h3>ToolName: <%= @post.toolname %></h3>
    <p><span class="label label-warning">분류: <%= @post.quality_practice %></span></p>
    <p>내용: <%= @post.title %></p>
    <p><a href="/quality/edit/<%= @post.id %>">수정</a> | <a href="/quality/delete_complete/<%= @post.id %>">삭제</a></p> 
    </div>
    <div class="col-md-1">
    </div>
  </div>
</div>

