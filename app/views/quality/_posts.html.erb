<% @posts.reverse.each do |post| %>
<div class="panel">
  <div class="row panel-body">
    <div class="col-md-3">
    </div>
    <div class="col-md-3 text-right">
      <p><img src="<%= post.image_url(:thumb) %>" class="img-rounded"></p>
    </div>
    <div class="col-md-6">
      <h4><a href="/quality/show/<%= post.id %>"><%= post.toolname %></a></h4>
      <p><span class="label label-warning"><%= post.quality_practice %></span></p>
      <p><strong><%= post.title %></strong></p>
    </div>
   </div>
</div>
<% end %>

